{
  "name": "adversarial-mirror",
  "version": "0.1.0",
  "description": "CLI middleware that mirrors user prompts to an original and adversarial challenger model.",
  "type": "module",
  "bin": {
    "mirror": "dist/cli.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "homebrew:generate": "node scripts/generate-homebrew.mjs",
    "package": "pkg . --out-path dist/pkg",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.0",
    "@google/generative-ai": "^0.21.0",
    "chalk": "^5.3.0",
    "cli-highlight": "^2.1.11",
    "commander": "^12.1.0",
    "conf": "^13.0.0",
    "ink": "^5.1.0",
    "openai": "^4.67.0",
    "react": "^18.3.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.79",
    "@yao-pkg/pkg": "^5.12.0",
    "tsup": "^8.3.0",
    "typescript": "^5.4.5",
    "vitest": "^4.0.18"
  },
  "pkg": {
    "scripts": "dist/cli.js",
    "targets": [
      "node20-win-x64",
      "node20-linux-x64",
      "node20-linux-arm64",
      "node20-macos-x64",
      "node20-macos-arm64"
    ],
    "outputPath": "dist/pkg"
  }
}
