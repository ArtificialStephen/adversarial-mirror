{
  "name": "adversarial-mirror",
  "version": "0.1.5",
  "description": "Terminal-first adversarial AI middleware. Routes open-ended prompts to two models in parallel, forces a challenger to surface blind spots, and synthesizes a verdict.",
  "author": "Stephen Marullo",
  "license": "MIT",
  "homepage": "https://github.com/ArtificialStephen/adversarial-mirror#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ArtificialStephen/adversarial-mirror.git"
  },
  "bugs": {
    "url": "https://github.com/ArtificialStephen/adversarial-mirror/issues"
  },
  "keywords": [
    "ai",
    "llm",
    "cli",
    "adversarial",
    "challenger",
    "anthropic",
    "openai",
    "gemini",
    "terminal",
    "sycophancy"
  ],
  "type": "module",
  "bin": {
    "mirror": "dist/cli.js"
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "tsup",
    "postbuild": "node --input-type=module -e \"import{copyFileSync}from'node:fs';try{copyFileSync('src/ui/header.txt','dist/header.txt')}catch{}\"",
    "dev": "tsup --watch",
    "dev:chat": "node dist/cli.js chat",
    "homebrew:generate": "node scripts/generate-homebrew.mjs",
    "package": "pkg . --out-path dist/pkg",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.0",
    "@google/generative-ai": "^0.21.0",
    "cli-highlight": "^2.1.11",
    "commander": "^12.1.0",
    "conf": "^13.0.0",
    "ink": "^5.1.0",
    "openai": "^4.67.0",
    "react": "^18.3.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.79",
    "@vitest/coverage-v8": "^4.0.18",
    "@yao-pkg/pkg": "^5.12.0",
    "tsup": "^8.3.0",
    "typescript": "^5.4.5",
    "vitest": "^4.0.18"
  },
  "pkg": {
    "scripts": "dist/cli.js",
    "targets": [
      "node20-win-x64",
      "node20-linux-x64",
      "node20-linux-arm64",
      "node20-macos-x64",
      "node20-macos-arm64"
    ],
    "outputPath": "dist/pkg"
  }
}
